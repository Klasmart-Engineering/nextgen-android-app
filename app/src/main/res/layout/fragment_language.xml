<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_58"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_top_view"
        style="@style/LeaveSubTitleLabel"
        android:gravity="center"
        android:text="@string/select_language"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/language_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/space_15"
        android:layout_marginTop="@dimen/space_18"
        android:paddingHorizontal="@dimen/space_15"
        android:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>