<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_bg_blue"
        android:padding="@dimen/space_15">

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="local_media_container,guidelineVertical" />

        <uk.co.kidsloop.features.liveclass.localmedia.LocalMediaCustomContainer
            android:id="@+id/local_media_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/space_8"
            app:cardCornerRadius="@dimen/space_12"
            app:layout_constraintBottom_toTopOf="@+id/first_student_video_feed"
            app:layout_constraintDimensionRatio="W,4:3"
            app:layout_constraintEnd_toStartOf="@id/raise_hand_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_13"
            android:contentDescription="@null"
            android:src="@drawable/ic_more_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/raise_hand_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_13"
            android:background="@color/transparent"
            android:contentDescription="@null"
            android:src="@drawable/selector_raise_hand_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <uk.co.kidsloop.features.liveclass.remoteviews.RemoteMediaCustomContainer
            android:id="@+id/first_student_video_feed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_12"
            app:layout_constraintBottom_toTopOf="@id/second_student_video_feed"
            app:layout_constraintDimensionRatio="W,4:3"
            app:layout_constraintEnd_toStartOf="@id/raise_hand_btn"
            app:layout_constraintTop_toBottomOf="@+id/local_media_container" />

        <uk.co.kidsloop.features.liveclass.remoteviews.RemoteMediaCustomContainer
            android:id="@+id/second_student_video_feed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_12"
            app:layout_constraintBottom_toTopOf="@id/third_student_video_feed"
            app:layout_constraintDimensionRatio="W,4:3"
            app:layout_constraintEnd_toStartOf="@id/raise_hand_btn"
            app:layout_constraintTop_toBottomOf="@+id/first_student_video_feed" />

        <uk.co.kidsloop.features.liveclass.remoteviews.RemoteMediaCustomContainer
            android:id="@+id/third_student_video_feed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/space_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="W,4:3"
            app:layout_constraintEnd_toStartOf="@id/raise_hand_btn"
            app:layout_constraintTop_toBottomOf="@id/second_student_video_feed" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/space_190" />

        <uk.co.kidsloop.features.liveclass.remoteviews.RemoteMediaCustomContainer
            android:id="@+id/teacher_video_feed"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/space_8"
            app:cardCornerRadius="@dimen/space_21"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/barrierVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/local_video_teacher_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_local_media_turned_off_teacher" />
        </uk.co.kidsloop.features.liveclass.remoteviews.RemoteMediaCustomContainer>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/live_class_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/live_class_overlay"
        android:visibility="gone">

        <ToggleButton
            android:id="@+id/toggle_camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginBottom="@dimen/space_32"
            android:background="@null"
            android:button="@drawable/ic_cam_live_class_selector"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/exit_class_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/space_32"
            android:layout_toEndOf="@+id/toggle_camera_btn"
            android:contentDescription="@null"
            android:src="@drawable/ic_exit_btn" />

        <ToggleButton
            android:id="@+id/toggle_microphone_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/space_32"
            android:layout_toStartOf="@+id/toggle_camera_btn"
            android:background="@null"
            android:button="@drawable/ic_mic_live_class_selector"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/exit_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/space_58"
            android:layout_marginBottom="@dimen/space_44"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_btn" />
    </RelativeLayout>

</FrameLayout>
