<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <ToggleButton
            android:id="@+id/toggle_audio_btn"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:layout_marginEnd="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:background="@drawable/ic_mic_selector"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/toggle_video_btn"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:layout_marginStart="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:background="@drawable/ic_camera_selector"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/toggle_close_btn"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:layout_marginStart="@dimen/space_40"
            android:layout_marginBottom="@dimen/space_20"
            android:background="@drawable/ic_close_selector"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/toggle_raise_hand_btn"
            android:layout_width="@dimen/space_80"
            android:layout_height="@dimen/space_80"
            android:background="@drawable/ic_placeholder_raise_hand"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</RelativeLayout>
