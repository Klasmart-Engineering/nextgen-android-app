<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/splash_fragment">

    <fragment
        android:id="@+id/splash_fragment"
        android:name="uk.co.kidsloop.features.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splash_to_language"
            app:destination="@id/language_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/splash_to_schedule"
            app:destination="@id/schedule_fragment"
            app:popUpTo="@id/splash_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="uk.co.kidsloop.features.login.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/login_to_preview"
            app:destination="@id/preview_fragment" />
    </fragment>

    <fragment
        android:id="@+id/preview_fragment"
        android:name="uk.co.kidsloop.features.preview.PreviewFragment"
        tools:layout="@layout/preview_fragment">

        <action
            android:id="@+id/preview_to_liveclass"
            app:destination="@id/live_class_fragment"
            app:popUpTo="@id/preview_fragment"
            app:popUpToInclusive="true">
            <argument
                android:name="isCameraTurnedOn"
                app:argType="boolean" />
            <argument
                android:name="isMicrophoneTurnedOn"
                app:argType="boolean" />
        </action>

        <action
            android:id="@+id/preview_to_login"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/preview_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/live_class_fragment"
        android:name="uk.co.kidsloop.features.liveclass.LiveClassFragment"
        tools:layout="@layout/live_class_fragment">

        <action
            android:id="@+id/liveclass_to_login"
            app:destination="@id/login_fragment"
            app:popUpTo="@id/live_class_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/language_fragment"
        android:name="uk.co.kidsloop.features.regionAndLanguage.LanguageFragment"
        tools:layout="@layout/fragment_language">

        <action
            android:id="@+id/language_to_region"
            app:destination="@+id/region_fragment"
            app:popUpTo="@id/language_fragment">
            <argument
                android:name="languageCode"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/region_fragment"
        android:name="uk.co.kidsloop.features.regionAndLanguage.RegionFragment"
        tools:layout="@layout/fragment_region">
        <action
            android:id="@+id/region_to_schedule"
            app:destination="@+id/schedule_fragment"
            app:popUpTo="@id/region_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/schedule_fragment"
        android:name="uk.co.kidsloop.features.schedule.ScheduleFragment"
        tools:layout="@layout/fragment_schedule">
        <action
            android:id="@+id/schedule_to_login"
            app:destination="@+id/login_fragment"
            app:popUpTo="@id/schedule_fragment" />
    </fragment>
</navigation>