<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <gradient
                android:endColor="#000000CC"
                android:startColor="#000000CC" />
            <stroke
                android:width="1dp"
                android:color="#EAEAEAFF" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:endColor="#EAEAEACC"
                    android:startColor="#EAEAEACC" />
            </shape>
        </clip>
    </item>
</layer-list>