<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KidsloopAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.KidsloopAndroid.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TitleLabel">
        <item name="fontFamily">@font/rooney_sans_blk</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#3984F7</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">42dp</item>
    </style>

    <style name="KidsloopProgressBar">
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">#00857D</item>
    </style>

    <style name="JoinButton">
        <item name="fontFamily">@font/rooney_sans_hv</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.037</item>
        <item name="lineHeight">@dimen/space_32</item>
    </style>

    <style name="ToastStyle">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="LeaveTitleLabel">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="lineHeight">@dimen/space_62</item>
    </style>

    <style name="LeaveSubTitleLabel">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">@dimen/space_27</item>
    </style>

    <style name="LeaveLiveClass">
        <item name="fontFamily">@font/rooney_sans_bold</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="lineHeight">41dp</item>
    </style>

    <style name="ListItemName">
        <item name="fontFamily">@font/rooney_sans_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">23.75dp</item>
    </style>

    <style name="ProfileItemInitials">
        <item name="fontFamily">@font/rooney_sans_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">27.5dp</item>
    </style>

    <style name="ProfileItemName">
        <item name="fontFamily">@font/rooney_sans_hv</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">-0.026</item>
        <item name="lineHeight">22.5dp</item>
    </style>

</resources>